{
  "kind": "singleType",
  "collectionName": "covid_updates",
  "info": {
    "singularName": "covid-update",
    "pluralName": "covid-updates",
    "displayName": "Coronavirus Update Page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "excerpt": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "content": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "blog_details": {
      "type": "component",
      "repeatable": false,
      "component": "cruise.blog-details",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
