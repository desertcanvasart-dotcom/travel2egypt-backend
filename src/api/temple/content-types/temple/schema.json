{
  "kind": "collectionType",
  "collectionName": "temples",
  "info": {
    "singularName": "temple",
    "pluralName": "temples",
    "displayName": "Temple & Monument",
    "description": "Ancient Egyptian temples, pyramids, and monuments"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "builder": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::historical-king.historical-king",
      "inversedBy": "major_monuments"
    },
    "dynasty": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::dynasty.dynasty"
    },
    "period_built": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "architectural_style": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "religious_purpose": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "discoveries": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "images_gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "worshipped_deities": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::god.god",
      "mappedBy": "related_temples"
    },
    "associated_pharaohs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::historical-king.historical-king",
      "mappedBy": "major_monuments"
    },
    "related_queens": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::queen.queen",
      "mappedBy": "monuments"
    },
    "related_tombs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tomb.tomb"
    },
    "related_pyramids": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::pyramid.pyramid"
    },
    "fact_box": {
      "type": "component",
      "repeatable": true,
      "component": "wiki.fact-box"
    },
    "timeline": {
      "type": "component",
      "repeatable": true,
      "component": "wiki.timeline-entry"
    },
    "seo_title": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "seo_description": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}