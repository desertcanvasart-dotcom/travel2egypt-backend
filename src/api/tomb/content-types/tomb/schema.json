{
    "kind": "collectionType",
    "collectionName": "tombs",
    "info": {
      "singularName": "tomb",
      "pluralName": "tombs",
      "displayName": "Tomb",
      "description": "Ancient Egyptian burial sites and tombs"
    },
    "options": {
      "draftAndPublish": true
    },
    "pluginOptions": {
      "i18n": {
        "localized": true
      }
    },
    "attributes": {
      "name": {
        "type": "string",
        "required": true,
        "pluginOptions": {
          "i18n": {
            "localized": true
          }
        }
      },
      "slug": {
        "type": "uid",
        "targetField": "name",
        "required": true
      },
      "tomb_number": {
        "type": "string",
        "unique": true
      },
      "location": {
        "type": "string",
        "required": true,
        "pluginOptions": {
          "i18n": {
            "localized": true
          }
        }
      },
      "site": {
        "type": "enumeration",
        "enum": [
          "valley_of_kings",
          "valley_of_queens",
          "valley_of_nobles",
          "deir_el_medina",
          "saqqara",
          "giza_necropolis",
          "theban_necropolis",
          "amarna",
          "abydos",
          "other"
        ]
      },
      "pharaoh": {
        "type": "relation",
        "relation": "manyToOne",
        "target": "api::historical-king.historical-king",
        "inversedBy": "tombs"
      },
      "occupant_queen": {
        "type": "relation",
        "relation": "oneToOne",
        "target": "api::queen.queen"
      },
      "occupant_name": {
        "type": "string",
        "pluginOptions": {
          "i18n": {
            "localized": true
          }
        }
      },
      "dynasty": {
        "type": "relation",
        "relation": "manyToOne",
        "target": "api::dynasty.dynasty",
        "inversedBy": "tombs"
      },
      "period_built": {
        "type": "string",
        "pluginOptions": {
          "i18n": {
            "localized": true
          }
        }
      },
      "discovery_date": {
        "type": "string"
      },
      "discovered_by": {
        "type": "string"
      },
      "architectural_features": {
        "type": "richtext",
        "pluginOptions": {
          "i18n": {
            "localized": true
          }
        }
      },
      "wall_decorations": {
        "type": "richtext",
        "pluginOptions": {
          "i18n": {
            "localized": true
          }
        }
      },
      "burial_goods": {
        "type": "richtext",
        "pluginOptions": {
          "i18n": {
            "localized": true
          }
        }
      },
      "discoveries": {
        "type": "richtext",
        "pluginOptions": {
          "i18n": {
            "localized": true
          }
        }
      },
      "current_condition": {
        "type": "richtext",
        "pluginOptions": {
          "i18n": {
            "localized": true
          }
        }
      },
      "accessibility": {
        "type": "enumeration",
        "enum": [
          "open_to_public",
          "limited_access",
          "closed",
          "by_special_permission"
        ]
      },
      "images_gallery": {
        "type": "media",
        "multiple": true,
        "allowedTypes": ["images"],
        "pluginOptions": {
          "i18n": {
            "localized": true
          }
        }
      },
      "fact_box": {
        "type": "component",
        "repeatable": true,
        "component": "wiki.fact-box"
      },
      "timeline": {
        "type": "component",
        "repeatable": true,
        "component": "wiki.timeline-entry"
      },
      "related_articles": {
        "type": "relation",
        "relation": "manyToMany",
        "target": "api::wiki-article.wiki-article",
        "mappedBy": "related_tombs"
      },
      "related_temples": {
        "type": "relation",
        "relation": "manyToMany",
        "target": "api::temple.temple",
        "mappedBy": "related_tombs"
      },
      "related_pyramids": {
        "type": "relation",
        "relation": "manyToMany",
        "target": "api::pyramid.pyramid",
        "inversedBy": "associated_tombs"
      },
      "seo_title": {
        "type": "string",
        "pluginOptions": {
          "i18n": {
            "localized": true
          }
        }
      },
      "seo_description": {
        "type": "text",
        "pluginOptions": {
          "i18n": {
            "localized": true
          }
        }
      }
    }
  }
  